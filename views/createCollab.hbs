<div class="container">
  <div class="row">
    <h1 class="section__title">Add <span class="orange">Collaboration</span></h1>
    <div class="create__img__wrapper">
      <img src="/public/assets/createProject.svg" alt="" class="create__img">
    </div>
    <form action="/collaboration/create" method="POST" enctype="multipart/form-data" class="form">
      <div class="form-group col-5">
        <label class="form-label" for="form-input">Profile Picture Link</label>
        <input class="form-input" type="text" placeholder="Picture URL:" name="pfp" />
      </div>
      <div class="form-group col-5">
        <label class="form-label" for="form-input">Name</label>
        <input class="form-input" type="text" placeholder="Name" name="name" required />
      </div>
      <div class="form-group col-5">
        <label class="form-label" for="form-input">Position</label>
        <input class="form-input" type="text" placeholder="E.g CEO etc" name="position" required />
      </div>
      <div class="form-group col-5">
        <label class="form-label" for="form-input">Description</label>
        <input class="form-input" type="text" placeholder="Short info" name="paragraph" required />
      </div>
      <div class="form-group col-5">
        <label class="form-label" for="form-input">Social Media</label>
        <input class="form-input" type="text" placeholder="Twitter Link:" name="socialmedia1" />
      </div>
      <div class="form-group col-5">
        <label class="form-label" for="form-input">Social Media</label>
        <input class="form-input" type="text" placeholder="Facebook Link:" name="socialmedia2" />
      </div>
      <button type="submit" class="btn btn-primary col-1">Submit</button>
    </form>
  </div>
</div>