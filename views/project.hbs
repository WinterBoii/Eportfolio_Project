<section>
  <div class="container">
    {{> errors}}
    {{#if project}}
    <div class="row">
      <div class="project__wrapper nohover">
        <img class="project__img" src="/public/Images/{{project.backgroundImage}}" />
      </div>
      <li class="project">
        <div class="project-by-id">
          <div>
            <h3>
              {{project.title}}
            </h3>
            <h4>
              {{project.subtitle}}
            </h4>
            <p>
              {{project.description}}
            </p>
          </div>
        </div>
      </li>
      {{#if isLoggedIn}}
      <div class="crud-wrapper">
        <div class="crud">
          <form action="/projects/{{project.id}}/update" method="GET">
            <input class="input-group-btn" type="submit" value="Update">
          </form>
          <form action="/projects/{{project.id}}/delete" method="POST">
            <input class="input-group-btn" type="submit" value="Delete">
          </form>
        </div>
      </div>
      {{/if}}
    </div>
    {{else}}
    <h1 class="section__title">The project you are looking for does not exist</h1>
    {{/if}}
  </div>
</section>