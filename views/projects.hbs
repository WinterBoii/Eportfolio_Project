<section id="projects">
	<div class="container">
		<div class="row">
			{{#if projects.length}}
			<h1 class="section__title">
				Here are some of my
				<span class="orange">projects</span>
			</h1>
			<ul class="project__list">
				{{#each projects}}
				<li class="project">
					<div class="project__wrapper">
						<img class="project__img" src="/public/Images/{{bgImage}}" />
						<div class="project__wrapper--bg"></div>
						<div class="project__description">
							<h3 class="project__description--title">
								{{title}}
							</h3>
							<h4 class="project__description--sub-title">
								{{subtitle}}
							</h4>
							<p class="project__description--para">
								{{description}}
							</p>
							<a href="/projects/{{id}}" class="nav__link--anchor link__hover-effect
								link__hover-effect--black">View Project</a>
						</div>
					</div>
					{{#if isLoggedIn}}
					<div class="crud-wrapper">
						<div class="crud">
							<form action="/createProject" method="GET" enctype="multipart/form-data">
								<input class="input-group-btn" type="submit" value="Create">
							</form>
							<form action="/deleteProject/{{id}}" method="GET" enctype="multipart/form-data">
								<input class="input-group-btn" type="submit" value="Delete">
							</form>
						</div>
					</div>
					{{/if}}
				</li>
				{{/each}}
			</ul>
			{{/if}}
			{{#else}}
			<h1 class="section__title">
				Projects will be added
				<span class="orange">soon!</span>
			</h1>
			<div class="crud-wrapper ">
				{{#if isLoggedIn}}
				<div class="crud">
					<form action="/createProject" method="GET" class="centered" enctype="multipart/form-data">
						<input class="input-group-btn" type="submit" value="Create">
					</form>
					<form action="/deleteProject/{{this.id}}" method="GET" class="centered" enctype="multipart/form-data">
						<input class="input-group-btn" type="submit" value="Delete">
					</form>
				</div>
				{{/if}}
			</div>
			{{/else}}
		</div>
</section>