<div class="container">
  {{> errors}}
  <div class="row">
    <h1 class="section__title">Add <span class="orange">Collaboration</span></h1>
    <div class="create__img__wrapper">
      <img src="/public/assets/createProject.svg" alt="" class="create__img">
    </div>
    <form action="/collaborations/create" method="POST" class="form">
      <div class="form-group col-5">
        <label class="form-label" for="form-input">Profile Picture Link (Optional)</label>
        <input class="form-input" type="text" placeholder="Picture Link:" name="profileImageLink" />
      </div>
      <div class="form-group col-5">
        <label class="form-label" for="form-input">Name</label>
        <input class="form-input" type="text" placeholder="Full name" name="name" required />
      </div>
      <div class="form-group col-5">
        <label class="form-label" for="form-input">Position</label>
        <input class="form-input" type="text" placeholder="E.g CEO etc" name="position" required />
      </div>
      <div class="form-group col-5">
        <label class="form-label" for="form-input">Description</label>
        <input class="form-input" type="text" placeholder="Short info" name="paragraph" required />
      </div>
      <div class="form-group col-5">
        <label class="form-label" for="form-input">Twitter (Optional)</label>
        <input class="form-input" type="text" placeholder="Twitter Link:" name="twitterLink" />
      </div>
      <div class="form-group col-5">
        <label class="form-label" for="form-input">Facebook (Optional)</label>
        <input class="form-input" type="text" placeholder="Facebook Link:" name="facebookLink" />
      </div>
      <button type="submit" class="btn btn-primary col-1">Submit</button>
    </form>
  </div>
</div>