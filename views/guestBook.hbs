<div class="container">
	<div class="row">
		{{> errors}}
		<h1 class="section__title">Leave <span class="orange">feedback</span></h1>
		<div class="create__img__wrapper">
			<img src="/public/assets/createProject.svg" alt="" class="create__img">
		</div>
		<form action="" method="POST" class="form wk-tab-6 wk-mobile-12">
			<div class="form-group col-5">
				<label class="form-label" for="form-input">Name</label>
				<input class="form-input" type="text" placeholder="Ex: Elon Musk" name="postname" value="{{postname}}" />
			</div>
			<div class="form-group col-5">
				<label class="form-label" for="form-input">Subject</label>
				<input class="form-input" type="text" placeholder="Ex: Help with setting up router" name="subject"
					value="{{subject}}" />
			</div>
			<div class="form-group col-5">
				<label class="form-label" for="form-input">Feedback</label>
				<textarea class="form-input" name="feedbackContent" id="input-description" placeholder="Textarea"
					rows="3">{{feedbackContent}}</textarea>
			</div>
			<button type="submit" class="btn btn-primary col-1">Submit</button>
		</form>

		{{#if feedback.length}}
		<div class="responsive-container-block container">
			<div class="responsive-container-block">
			{{#each feedback}}
				<div class="responsive-cell-block wk-ipadp-3 wk-tab-6 wk-mobile-12 card-container">
					<p class="text-blk name">{{subject}}</p>
					<p class="text-blk position">By: {{postname}}</p>
					<p class="text-blk feature-text">{{feedbackContent}}</p>
					{{#if ../isLoggedIn}}
					<div class="btn-wrapper">
					<form action="/guestBook/{{id}}/update">
						<input class="input-group-btn" type="submit" value="Update" />
					</form>
					<form action="/guestBook/{{id}}/delete" method="POST" class="wk-desk-3 wk-ipadp-3 wk-tab-6 wk-mobile-12">
						<input class="input-group-btn" type="submit" value="Delete" />
					</form>
				</div>
			{{/if}}
			<div class="divider text-center"></div>
				</div>
			{{/each}}
		</div>
		{{else}}
		<h2>There is No feedback Right Now</h2>
		<h4 id="emptycontent">But don't forget to Share With us Your Amazing Feedback</h4>
		{{/if}}
	</div>
		</div>
</div>